{
    "compilerOptions": {
      "allowJs": true,
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "isolatedModules": true,
      "jsx": "react",
      "lib": ["es6"],
      "moduleResolution": "node",
      "noEmit": true,
      "strict": true,
      "target": "esnext",
      "plugins": [
        {
          "name": "typescript-styled-plugin",
          "lint": {
            "validProperties": [
              "aspect-ratio",
              "elevation",
              "margin-vertical",
              "margin-horizontal",
              "padding-horizontal",
              "padding-vertical",
              "resize-mode",
              "shadow-color",
              "shadow-opacity",
              "shadow-offset",
              "shadow-radius",
              "text-align-vertical",
              "tint-color"
            ]
          }
        }
      ]
    },
    "exclude": [
      "node_modules",
      "babel.config.js",
      "metro.config.js",
      "jest.config.js"
    ],
    "extends": "expo/tsconfig.base"
  }